<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icss.hotel.dao.TypeDao">
	<select id="selectAllType" resultType="type">
		SELECT * FROM tb_type
	</select>
	<insert id="addType" parameterType="type">
		insert into tb_type(tname,price,totalNum,RestNum)values(#{tname},#{price},#{totalNum},#{RestNum})
	</insert>
	<delete id="deleteTypeById" parameterType="String">
		delete from tb_type where tno = #{tno}
	</delete>
	<update id="updateTypeById" parameterType="type">
		update tb_type set tname = #{tname},price = #{price},totalNum = #{totalNum},RestNum = #{RestNum} where tno = #{tno}
	</update>
</mapper>